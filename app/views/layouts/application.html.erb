<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <%= stylesheet_link_tag 'application', data: { turbolinks_track: 'reload' }, media: 'all' %>
    <%= javascript_include_tag 'application', data: { turbolinks_track: 'reload' } %>
    <%= csrf_meta_tags %>

    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
  </head>

  <body>
    <div class="alert alert-warning hidden loading-caption">
      <strong><%= t('label.loading') %></strong>
    </div>

    <div class="container">
      <%= render 'shared/menu' %>


      <div class="panel panel-default">
        <div class="panel-heading"><h1 class="main"><%= @title %></h1></div>
        <div class="panel-body">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
  <footer>
    <%= render 'shared/flash' if flash_message %>
  </footer>
</html>
